baseURL = "https://robinmordasiewicz.github.io/"
title = "Fortinet Cloud Native Protection"

languageCode = "en-US"
defaultContentLanguage = "en"
canonifyURLs = true # true -> all relative URLs would instead be canonicalized using baseURL
relativeURLs = true # true -> rewrite all relative URLs to be relative to the current content
uglyURLs = true     # true -> basic/index.html -> basic.html
theme = ["hugo-theme-relearn"]
disableHugoGeneratorInject = true
metaDataFormat = "yaml"
defaultContentLanguageInSubdir= "false"
enableEmoji = true
enableGitInfo = true

[[menu.shortcuts]]
name = "<i class='fab fa-fw fa-github'></i> GitHub repo"
identifier = "ds"
url = "https://github.com/McShelby/hugo-theme-relearn"
weight = 10

[outputs]
  home = [ "HTML", "RSS",  "SEARCH", "SEARCHPAGE"]
  section = ["HTML", "RSS"]
  page = ["HTML", "RSS"]

[markup]
  [markup.highlight]
    guessSyntax = false
    noClasses = false
    style = "native"

  [markup.goldmark.renderer]
    unsafe = true

[Langauges]
  landingPageName = "<i class='fas fa-home'></i> Home"

[params]
  editURL = "https://github.com/robinmordasiewicz/fortinet-forticnp-hugo-md/edit/main/content/"
  logoBannerText="FortiCNP"
  logoBannerSubText="Version 22.4a"
  author = "Robin Mordasiewicz"
  description = "Fortinet Cloud Native Protection Presentation"
  themeVariant = "fortinet"
  breadcrumbSeparator = ">"
  disableSeoHiddenPages = true
  mermaidZoom = true
  # Fortinet specific variants are: "Workshop", "UseCase", "Demo", "Spotlight", "FortinetSilver", "FortinetTeal".  These change the top left logo background & add Text under the Logo
  #themeVariant = "Workshop"

  showVisitedLinks = true
  disableSearch = true
  disableAssetsBusting = false
  disableInlineCopyToClipBoard = false
  disableShortcutsTitle = false
  disableLandingPageButton = true
  disableLanguageSwitchingButton = false
  disableBreadcrumb = false
  disableToc = false
  disableMathJax = true

  customMathJaxURL = "https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"
  mathJaxInitialize = "{}"
  disableMermaid = false
  mermaidInitialize = "{ \"theme\": \"default\" , \"securityLevel\": \"loose\" }"
  disableSwagger = true
  customSwaggerURL = "https://unpkg.com/rapidoc/dist/rapidoc-min.js"
  swaggerInitialize = "{ \"theme\": \"light\" }"
  disableNextPrev = false
  ordersectionsby = "weight"
  titleSeparator = "-"
  collapsibleMenu = true
  additionalContentLanguage = [ "en" ]
  disableExplicitIndexURLs = false
  externalLinkTarget = "_blank"

